# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_PASSWORD=your-database-password-here

# OpenAI Configuration (PAID API - Required for content generation)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# OpenAI Image Generation (DALL-E) - Uses same API key as above
# Cost: $0.04 per image (standard quality) or $0.08 per image (HD quality)
# Note: S3 configuration required when using OpenAI images (URLs expire in 1 hour)
DEFAULT_IMAGE_SOURCE=unsplash  # Default image source for new projects: unsplash, openai, hybrid, none
OPENAI_IMAGE_MODEL=dall-e-3  # dall-e-2 or dall-e-3 (dall-e-3 recommended)
OPENAI_IMAGE_SIZE=1024x1024  # Image size: 1024x1024, 1792x1024 (landscape), 1024x1792 (portrait)
OPENAI_IMAGE_QUALITY=standard  # Quality: standard ($0.04) or hd ($0.08) - DALL-E 3 only
OPENAI_IMAGE_STYLE=vivid  # Style: vivid (hyper-real, cinematic) or natural (realistic) - DALL-E 3 only

# SerpAPI Configuration (Free tier available)
SERPAPI_KEY=your-serpapi-key-here

# Unsplash Configuration (Free tier available)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here

# Node Environment
NODE_ENV=development

# Scheduler Configuration
CRON_SCHEDULE="0 0 * * *"  # Daily at midnight

# Content Quality Configuration
MAX_CONTENT_ITERATIONS=4  # Maximum number of improvement iterations (2-4 recommended)
MIN_QUALITY_SCORE=8  # Minimum quality score to stop iterating (1-10 scale)
MIN_WORD_COUNT=1000  # Minimum acceptable word count for blog posts
TARGET_WORD_COUNT=1500  # Target word count for optimal content length

# Adaptive Research Configuration
RESEARCH_URLS_TO_SCRAPE=3  # Number of URLs to scrape when research quality is poor (3-5 recommended)
RESEARCH_SUMMARY_TOKENS=500  # Target tokens per URL summary (400-600 recommended)
RESEARCH_CONFIDENCE_THRESHOLD=70  # Minimum confidence % to skip deep research (60-80 recommended)

# Multilingual Content Configuration
DEFAULT_LANGUAGE=en  # Default language for new projects (ISO 639-1 code: en, es, fr, de, ja, etc.)
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,zh,ko,ar,hi,ru  # Comma-separated list of supported language codes

# S3 Image Storage Configuration (Optional - for uploading images to S3)
# If not configured, images will use Unsplash direct URLs
# Projects can override these with per-project S3 credentials
S3_ENDPOINT=https://s3.ir-thr-at1.arvanstorage.ir  # Arvan S3 endpoint (or any S3-compatible service)
S3_ACCESS_KEY_ID=your-s3-access-key-here
S3_SECRET_ACCESS_KEY=your-s3-secret-key-here
S3_BUCKET_NAME=your-bucket-name-here
S3_REGION=ir-thr-at1  # Arvan region (or us-east-1 for AWS)
S3_PUBLIC_URL=  # Optional: Custom public URL for accessing images (e.g., CDN URL)

# Optional: Telegram Notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
