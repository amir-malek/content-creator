# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_PASSWORD=your-database-password-here

# OpenAI Configuration (PAID API - Required for content generation)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# SerpAPI Configuration (Free tier available)
SERPAPI_KEY=your-serpapi-key-here

# Unsplash Configuration (Free tier available)
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here

# Node Environment
NODE_ENV=development

# Scheduler Configuration
CRON_SCHEDULE="0 0 * * *"  # Daily at midnight

# Content Quality Configuration
MAX_CONTENT_ITERATIONS=4  # Maximum number of improvement iterations (2-4 recommended)
MIN_QUALITY_SCORE=8  # Minimum quality score to stop iterating (1-10 scale)
MIN_WORD_COUNT=1000  # Minimum acceptable word count for blog posts
TARGET_WORD_COUNT=1500  # Target word count for optimal content length

# Adaptive Research Configuration
RESEARCH_URLS_TO_SCRAPE=3  # Number of URLs to scrape when research quality is poor (3-5 recommended)
RESEARCH_SUMMARY_TOKENS=500  # Target tokens per URL summary (400-600 recommended)
RESEARCH_CONFIDENCE_THRESHOLD=70  # Minimum confidence % to skip deep research (60-80 recommended)

# Optional: Telegram Notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-telegram-chat-id-here
